.panel.panel-default#active_list
  .panel-body
    %p
      %b= Medicine.human_attribute_name(:max_count) + ':'
      = medicine.max_count
    %p
      %b= Medicine.human_attribute_name(:notation) + ':'
      = (medicine.notation == 'volume' ? 'Объем' : 'Штуки')
    %p
      %b= Medicine.human_attribute_name(:manufacturer) + ':'
      = medicine.manufacturer
    %p
      %b= Medicine.human_attribute_name(:perm) + ':'
      = (medicine.perm == 1 ? 'Да' : 'Нет')
    %p
      %b= Medicine.human_attribute_name(:price) + ':'
      = medicine.price

    = link_to edit_medicine_path(medicine), class: 'btn btn-info' do
      = fa_icon :edit
      = t('buttons.edit')

    = link_to medicine, :method => :delete, :data => { :confirm => t('buttons.confirm.medicine') }, class: 'btn btn-danger' do
      = fa_icon :times
      = t('buttons.destroy')