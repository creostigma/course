=breadcrumb_tag do
  %li
    = link_to t('app.administration'), root_path
  %li
    = link_to t('app.pharmacies.index'), pharmacies_path
  %li.active
    = (t('app.pharmacies.once') + ' â„–' + @pharmacy.number.to_s)
%br
%br

%p
  %b= Pharmacy.human_attribute_name(:number) + ':'
  = @pharmacy.number
%p
  %b= Pharmacy.human_attribute_name(:address) + ':'
  = @pharmacy.address
%p
  %b= Pharmacy.human_attribute_name(:subway) + ':'
  = @pharmacy.subway

= link_to edit_pharmacy_path(@pharmacy), class: 'btn btn-info' do
  = fa_icon :edit
  = t('buttons.edit')

= link_to @pharmacy, :method => :delete, :data => { :confirm => t('buttons.confirm.pharmacy') }, class: 'btn btn-danger' do
  = fa_icon :times
  = t('buttons.destroy')
