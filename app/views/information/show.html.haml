=breadcrumb_tag do
  %li
    = link_to t('app.administration'), root_path
  %li
    = link_to t('app.information.index'), information_index_path
  %li.active
    = (t('app.pharmacies.once') + ' â„–' + @information.pharmacy.number.to_s + ' - ' +  @information.medicine.name.to_s)
%br
%br

%p
  %b= Information.human_attribute_name(:pharmacy_id) + ':'
  = @information.pharmacy.number
%p
  %b= Information.human_attribute_name(:medicine_id) + ':'
  = @information.medicine.name
%p
  %b= Information.human_attribute_name(:amount) + ':'
  = @information.amount

= link_to edit_information_path(@information), class: 'btn btn-info' do
  = fa_icon :edit
  = t('buttons.edit')

= link_to @information, :method => :delete, :data => { :confirm => t('buttons.confirm.information') }, class: 'btn btn-danger' do
  = fa_icon :times
  = t('buttons.destroy')
  
